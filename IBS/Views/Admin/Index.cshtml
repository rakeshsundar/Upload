@model MvcMySql.Models.admin_details
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>IBS</title>
    <link href="~/css/ionic.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/AdminLTE.css" rel="stylesheet" type="text/css" />
    <link href="~/css/bootstrap.min1.css" rel="stylesheet" type="text/css" />
    <link href="~/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/ionic.min.css" rel="stylesheet" type="text/css" />
    <script src="~/js/jquery.min.js" type="text/javascript"></script>
    <link href="~/css/style.css" rel="stylesheet" type="text/css" />
    <link rel="shortcut icon" href="~/img/favicon.png">
</head>
<body style="min-height:700px;">
    <script type="text/javascript">
        function isNumberKey(evt) {
            var charCode = (evt.which) ? evt.which : event.keyCode
            if (charCode > 31 && (charCode != 46 && (charCode < 48 || charCode > 57)))
                return false;
            return true;
        }

        function characterlimit(element, limitmum) {
            if (element.value.length > limitmum) {
                element.value = element.value.substr(0, limitmum);

            }
        }
    </script>
   
    <div class="form-box hide_div" id="login-box" style="border: solid 1px #ccc; border-radius: 5px; margin-top:12%">
        @using (Html.BeginForm("Index", "Admin", FormMethod.Post))
        {
            <div class="header"> Welcome</div>
            <div style="text-align:center;">
                 @Html.ValidationSummary(true)
            </div>
            <div class="body bg-gray">
                <div class="form-group">
                    @Html.TextBoxFor(a => a.username, new { @class = "form-control",placeholder="user name",style="width:300px;", onkeyup="characterlimit(this,'50');", maxlength="30"  })
                    @Html.ValidationMessageFor(a => a.username)
                </div>
                <div class="form-group">
                    @Html.PasswordFor(a => a.password, new {@class="form-control", placeholder="Password" ,maxlength="16", style="width:300px;"})
                    @Html.ValidationMessageFor(a => a.password)
                </div>
            </div>
            <div class="footer">
                <input name="command" type="submit" value="Login" class="btn bg-olive btn-block" />
            </div>
        }
    </div>
       
</body>

</html>